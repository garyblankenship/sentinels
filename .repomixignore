storage/framework/sessions/
storage/framework/views/
bootstrap/cache/

# ================================
# LOG & DEBUG FILES
# ================================
# Can contain sensitive runtime data
*.log
logs/
storage/logs/
laravel.log
xdebug/
*.trace

# ================================
# VERSION CONTROL & CI/CD
# ================================
# Internal tooling, not core code
.git/
.gitignore
.github/
