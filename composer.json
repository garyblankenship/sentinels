{
    "name": "vampires/sentinels",
    "description": "Powerful, flexible, and simple agent-based task execution framework for Laravel with dynamic routing and first-class observability",
    "keywords": [
        "laravel",
        "agents",
        "pipeline",
        "orchestration",
        "task-execution",
        "routing",
        "observability"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gary Blankenship",
            "email": "gary@blankenship.dev"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0|^10.0|^11.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/console": "^9.0|^10.0|^11.0",
        "illuminate/events": "^9.0|^10.0|^11.0",
        "illuminate/validation": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.6|^10.0",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "Vampires\\Sentinels\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vampires\\Sentinels\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vampires\\Sentinels\\SentinelsServiceProvider"
            ],
            "aliases": {
                "Sentinels": "Vampires\\Sentinels\\Facades\\Sentinels"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
